<% if current_user %>
  <% @tasks.each do |task| %>
    <li><%= task.description %>
    <% if task.complete == true %>
      <%= link_to "Undone", undone_path(id: task.id), method: :post %>
    <% else %>
      <%= link_to "Done", done_path(id: task.id), method: :post %>
    <% end %>
    <%= link_to "Delete", task_path(task.id), method: :delete %></li>
  <% end %>

  <div class="form">
    <%= form_for(@task, url: tasks_path, html: { id: "task-create-form" }) do |f| %>
      <h1 class="text-center">
        New Task
      </h1>

      <div class="form-group">
        <h4> <%= f.label :description_field, "Description:" %> </h4>
        <%= f.text_field :description, required: true, id: "task_description_field", class: 'form-control' %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "Create", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
<% end %>
